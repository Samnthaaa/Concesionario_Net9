@page
@model CrudRazorApp.Pages.Conductores.CreateModel

@{
    ViewData["Title"] = "Registrar Conductor";
}

<div class="back-button-container">
    <a asp-page="./Index" class="back-button">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="19" y1="12" x2="5" y2="12"></line>
            <polyline points="12 19 5 12 12 5"></polyline>
        </svg>
        Volver al listado
    </a>
</div>

<h1 class="page-title">Registrar Nuevo Conductor</h1>
<p class="page-subtitle">Complete la información del conductor.</p>

<div class="card">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" style="margin-bottom: 1.5rem;"></div>

        <div class="form-group">
            <label asp-for="Conductor.Nombre" class="form-label"></label>
            <input asp-for="Conductor.Nombre" class="form-control" />
            <span asp-validation-for="Conductor.Nombre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Conductor.Apellido" class="form-label"></label>
            <input asp-for="Conductor.Apellido" class="form-control" />
            <span asp-validation-for="Conductor.Apellido" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Conductor.FechaNacimiento" class="form-label">Fecha de Nacimiento</label>
            <input asp-for="Conductor.FechaNacimiento" class="form-control" type="date" />
            <span asp-validation-for="Conductor.FechaNacimiento" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Conductor.Telefono" class="form-label">Teléfono</label>
            <input asp-for="Conductor.Telefono" class="form-control" type="tel" />
            <span asp-validation-for="Conductor.Telefono" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Conductor.Email" class="form-label"></label>
            <input asp-for="Conductor.Email" class="form-control" type="email" />
            <span asp-validation-for="Conductor.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Conductor.Licencia" class="form-label"></label>
            <input asp-for="Conductor.Licencia" class="form-control" />
            <span asp-validation-for="Conductor.Licencia" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Conductor.FechaContratacion" class="form-label">Fecha de Contratación</label>
            <input asp-for="Conductor.FechaContratacion" class="form-control" type="date" />
            <span asp-validation-for="Conductor.FechaContratacion" class="text-danger"></span>
        </div>

        <div class="actions">
            <button type="submit" class="btn-primary">Guardar Conductor</button>
            <a asp-page="Index" class="btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}