@page
@model CrudRazorApp.Pages.Conductores.CreateModel

@{
    ViewData["Title"] = "Crear Conductor";
}

<h1 class="page-title">Registrar un Conductor Nuevo</h1>
<p class="page-subtitle">Rellena los siguientes campos para añadir un conductor al sistema.</p>

<div class="card" style="max-width: 800px;">
    <form method="post">
        
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="form-layout">

            <div class="form-group">
                <label asp-for="Conductor.Nombre"></label>
                <input asp-for="Conductor.Nombre" class="form-control" />
                <span asp-validation-for="Conductor.Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Conductor.Apellido"></label>
                <input asp-for="Conductor.Apellido" class="form-control" />
                <span asp-validation-for="Conductor.Apellido" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Conductor.FechaNacimiento">Fecha de Nacimiento</label>
                <input asp-for="Conductor.FechaNacimiento" class="form-control" type="date" />
                <span asp-validation-for="Conductor.FechaNacimiento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Conductor.Telefono"></label>
                <input asp-for="Conductor.Telefono" class="form-control" type="tel" /> <span asp-validation-for="Conductor.Telefono" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Conductor.Email"></label>
                <input asp-for="Conductor.Email" class="form-control" type="email" /> <span asp-validation-for="Conductor.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Conductor.Licencia"></label>
                <input asp-for="Conductor.Licencia" class="form-control" />
                <span asp-validation-for="Conductor.Licencia" class="text-danger"></span>
            </div>
            
        </div>

        <div class="actions" style="margin-top: 2rem;">
            <button type="submit" class="btn-primary">Guardar Conductor</button>
            <a class="btn-secondary" asp-page="./Index">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}