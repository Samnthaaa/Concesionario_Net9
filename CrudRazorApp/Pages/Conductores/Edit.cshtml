@page "{id:int}"
@model CrudRazorApp.Pages.Conductores.EditModel

@{
    ViewData["Title"] = "Editar Conductor";
}

<div class="back-button-container">
    <a asp-page="./Index" class="back-button">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="19" y1="12" x2="5" y2="12"></line>
            <polyline points="12 19 5 12 12 5"></polyline>
        </svg>
        Volver al listado
    </a>
</div>

<h1 class="page-title">Editar Conductor</h1>
<p class="page-subtitle">Actualiza la información del conductor.</p>

<div class="card" style="max-width: 800px;">
    <form method="post">
        <input type="hidden" asp-for="Conductor.Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-layout">
            <div class="form-group">
                <label asp-for="Conductor.Nombre"></label>
                <input asp-for="Conductor.Nombre" class="form-control" />
                <span asp-validation-for="Conductor.Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Conductor.Apellido"></label>
                <input asp-for="Conductor.Apellido" class="form-control" />
                <span asp-validation-for="Conductor.Apellido" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Conductor.FechaNacimiento">Fecha de Nacimiento</label>
                <input asp-for="Conductor.FechaNacimiento" class="form-control" type="date" />
                <span asp-validation-for="Conductor.FechaNacimiento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Conductor.Telefono">Teléfono</label>
                <input asp-for="Conductor.Telefono" class="form-control" type="number" />
                <span asp-validation-for="Conductor.Telefono" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Conductor.Email"></label>
                <input asp-for="Conductor.Email" class="form-control" type="email" />
                <span asp-validation-for="Conductor.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Conductor.Licencia">Número de Licencia</label>
                <input asp-for="Conductor.Licencia" class="form-control" />
                <span asp-validation-for="Conductor.Licencia" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Conductor.FechaContratacion">Fecha de Contratación</label>
                <input asp-for="Conductor.FechaContratacion" class="form-control" type="date" />
                <span asp-validation-for="Conductor.FechaContratacion" class="text-danger"></span>
            </div>
        </div>

        <div class="actions" style="margin-top: 2rem;">
            <button type="submit" class="btn-primary">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
                Guardar Cambios
            </button>
            <a class="btn-secondary" asp-page="./Index">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}