@page "{id:int}"
@model CrudRazorApp.Pages.Reservas.EditModel

@{
    ViewData["Title"] = "Editar Reserva";
}

<div class="back-button-container">
    <a asp-page="./Index" class="back-button">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="19" y1="12" x2="5" y2="12"></line>
            <polyline points="12 19 5 12 12 5"></polyline>
        </svg>
        Volver al listado
    </a>
</div>

<h1 class="page-title">Editar Reserva</h1>
<p class="page-subtitle">Actualiza los detalles de la reserva.</p>

<div class="card" style="max-width: 800px;">
    <form method="post">
        <input type="hidden" asp-for="Reserva.Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-layout">
            <div class="form-group">
                <label asp-for="Reserva.AutoId">Auto</label>
                <select asp-for="Reserva.AutoId" asp-items="Model.AutosList" class="form-control">
                    <option value="">-- Seleccione un auto --</option>
                </select>
                <span asp-validation-for="Reserva.AutoId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Reserva.ConductorId">Conductor</label>
                <select asp-for="Reserva.ConductorId" asp-items="Model.ConductoresList" class="form-control">
                    <option value="">-- Seleccione un conductor --</option>
                </select>
                <span asp-validation-for="Reserva.ConductorId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Reserva.FechaInicio">Fecha y Hora de Inicio</label>
                <input asp-for="Reserva.FechaInicio" class="form-control" type="datetime-local" />
                <span asp-validation-for="Reserva.FechaInicio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Reserva.FechaFin">Fecha y Hora de Fin</label>
                <input asp-for="Reserva.FechaFin" class="form-control" type="datetime-local" />
                <span asp-validation-for="Reserva.FechaFin" class="text-danger"></span>
            </div>
        </div>

        <div class="actions" style="margin-top: 2rem;">
            <button type="submit" class="btn-primary">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
                Guardar Cambios
            </button>
            <a class="btn-secondary" asp-page="./Index">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}