@page "{id:int}"
@model CrudRazorApp.Pages.Reservas.DetailsModel

@{
    ViewData["Title"] = "Detalles de la Reserva";
}

<div class="back-button-container">
    <a asp-page="./Index" class="back-button">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="19" y1="12" x2="5" y2="12"></line>
            <polyline points="12 19 5 12 12 5"></polyline>
        </svg>
        Volver al listado
    </a>
</div>

<h1 class="page-title">Detalles de la Reserva</h1>
<p class="page-subtitle">Información completa de la reserva seleccionada.</p>

@if (Model.Reserva != null)
{
    var estado = DateTime.Now < Model.Reserva.FechaInicio ? "Pendiente" :
                 DateTime.Now > Model.Reserva.FechaFin ? "Finalizada" : "En Curso";
    var estadoClass = estado == "Pendiente" ? "status-pending" :
                      estado == "Finalizada" ? "status-completed" : "status-active";

    <div class="card" style="max-width: 900px;">
        <div class="status-header">
            <span class="status-badge @estadoClass">@estado</span>
        </div>

        <div class="details-grid">
            <div class="detail-item">
                <span class="detail-label">Auto</span>
                <span class="detail-value">
                    @Model.Reserva.Auto?.Marca @Model.Reserva.Auto?.Modelo
                    <br />
                    <small style="color: var(--text-secondary);">Placa: @Model.Reserva.Auto?.Placa</small>
                </span>
            </div>

            <div class="detail-item">
                <span class="detail-label">Conductor</span>
                <span class="detail-value">@Model.Reserva.Conductor?.Nombre @Model.Reserva.Conductor?.Apellido</span>
            </div>

            <div class="detail-item">
                <span class="detail-label">Fecha de Inicio</span>
                <span class="detail-value">@Model.Reserva.FechaInicio.ToString("dd/MM/yyyy HH:mm")</span>
            </div>

            <div class="detail-item">
                <span class="detail-label">Fecha de Fin</span>
                <span class="detail-value">@Model.Reserva.FechaFin.ToString("dd/MM/yyyy HH:mm")</span>
            </div>

            <div class="detail-item">
                <span class="detail-label">Duración</span>
                <span class="detail-value">
                    @{
                        var duracion = Model.Reserva.FechaFin - Model.Reserva.FechaInicio;
                        var dias = duracion.Days;
                        var horas = duracion.Hours;
                        var texto = dias > 0 ? $"{dias} día{(dias > 1 ? "s" : "")}" : "";
                        if (horas > 0)
                        {
                            texto += (dias > 0 ? " y " : "") + $"{horas} hora{(horas > 1 ? "s" : "")}";
                        }
                        @texto
                    }
                </span>
            </div>
        </div>

        <div class="actions" style="margin-top: 2rem;">
            <a asp-page="./Edit" asp-route-id="@Model.Reserva.Id" class="btn-primary">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                    <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                </svg>
                Editar
            </a>
            <a asp-page="./Index" class="btn-secondary">Volver al Listado</a>
        </div>
    </div>
}
else
{
    <div class="card">
        <p>No se encontró la reserva.</p>
        <a asp-page="./Index" class="btn-secondary">Volver</a>
    </div>
}

<style>
    .status-header {
        margin-bottom: 2rem;
        text-align: center;
    }

    .status-badge {
        display: inline-block;
        padding: 0.5rem 1.25rem;
        border-radius: 6px;
        font-size: 0.9rem;
        font-weight: 600;
        letter-spacing: 0.3px;
    }

    .status-pending {
        background-color: #FFF4E6;
        color: #E67700;
    }

    .status-active {
        background-color: #E8F5E9;
        color: #2E7D32;
    }

    .status-completed {
        background-color: #F5F5F5;
        color: #757575;
    }

    .details-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
    }

    .detail-item {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .detail-label {
        font-size: 0.85rem;
        font-weight: 600;
        color: var(--text-secondary);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .detail-value {
        font-size: 1.1rem;
        color: var(--text-primary);
        font-weight: 500;
    }
</style>