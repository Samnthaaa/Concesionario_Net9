@page "{id:int}"
@model CrudRazorApp.Pages.Autos.DeleteModel

@{
    ViewData["Title"] = "Eliminar Auto";
}

<div class="back-button-container">
    <a asp-page="./Index" class="back-button">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="19" y1="12" x2="5" y2="12"></line>
            <polyline points="12 19 5 12 12 5"></polyline>
        </svg>
        Volver al listado
    </a>
</div>

<h1 class="page-title">Eliminar Auto</h1>
<p class="page-subtitle" style="color: #cb3c3c;">Esta acción no se puede deshacer.</p>

@if (Model.Auto != null)
{
    <div class="card" style="max-width: 600px;">
        <div class="delete-warning">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="color: #cb3c3c;">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="12" y1="8" x2="12" y2="12"></line>
                <line x1="12" y1="16" x2="12.01" y2="16"></line>
            </svg>
            <h3>¿Estás seguro de que deseas eliminar este auto?</h3>
            <p>Se eliminará toda la información relacionada con <strong>@Model.Auto.Marca @Model.Auto.Modelo</strong>.</p>
        </div>

        <div class="details-summary">
            <div class="summary-item">
                <span class="summary-label">Marca:</span>
                <span class="summary-value">@Model.Auto.Marca</span>
            </div>
            <div class="summary-item">
                <span class="summary-label">Modelo:</span>
                <span class="summary-value">@Model.Auto.Modelo</span>
            </div>
            <div class="summary-item">
                <span class="summary-label">Año:</span>
                <span class="summary-value">@Model.Auto.Anio</span>
            </div>
            <div class="summary-item">
                <span class="summary-label">Color:</span>
                <span class="summary-value">@Model.Auto.Color</span>
            </div>
            <div class="summary-item">
                <span class="summary-label">Placa:</span>
                <span class="summary-value">@Model.Auto.Placa</span>
            </div>
        </div>

        <form method="post">
            <div class="actions" style="margin-top: 2rem;">
                <button type="submit" class="btn-danger">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="3 6 5 6 21 6"></polyline>
                        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                    </svg>
                    Confirmar Eliminación
                </button>
                <a asp-page="./Index" class="btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
}
else
{
    <div class="card">
        <p>No se encontró el auto.</p>
        <a asp-page="./Index" class="btn-secondary">Volver</a>
    </div>
}

<style>
    .delete-warning {
        text-align: center;
        padding: 2rem;
        background-color: #FEF2F2;
        border-radius: 8px;
        margin-bottom: 2rem;
    }

        .delete-warning svg {
            margin-bottom: 1rem;
        }

        .delete-warning h3 {
            color: #991B1B;
            margin-bottom: 0.5rem;
            font-size: 1.25rem;
        }

        .delete-warning p {
            color: #7F1D1D;
            margin: 0;
        }

    .details-summary {
        border: 1px solid var(--border-color);
        border-radius: 8px;
        padding: 1.5rem;
        background-color: var(--bg);
    }

    .summary-item {
        display: flex;
        justify-content: space-between;
        padding: 0.75rem 0;
        border-bottom: 1px solid var(--border-color);
    }

        .summary-item:last-child {
            border-bottom: none;
        }

    .summary-label {
        font-weight: 600;
        color: var(--text-secondary);
    }

    .summary-value {
        color: var(--text-primary);
    }

    .btn-danger {
        background: #DC2626;
        color: #fff;
        padding: 0.85rem 2rem;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        border: none;
        cursor: pointer;
        box-shadow: 0 4px 15px rgba(220, 38, 38, 0.2);
        transition: transform var(--transition), box-shadow var(--transition), background-color var(--transition);
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

        .btn-danger:hover {
            transform: translateY(-3px);
            background-color: #B91C1C;
            box-shadow: 0 8px 25px rgba(220, 38, 38, 0.3);
        }
</style>