@page "{id:int}"
@model CrudRazorApp.Pages.Autos.EditModel

@{
    ViewData["Title"] = "Editar Auto";
}

<div class="back-button-container">
    <a asp-page="./Index" class="back-button">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="19" y1="12" x2="5" y2="12"></line>
            <polyline points="12 19 5 12 12 5"></polyline>
        </svg>
        Volver al listado
    </a>
</div>

<h1 class="page-title">Editar Auto</h1>
<p class="page-subtitle">Actualice la información del vehículo.</p>


<div class="card">
    <form method="post">
        <input type="hidden" asp-for="Auto.Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger" style="margin-bottom: 1.5rem;"></div>

        <div class="form-group">
            <label asp-for="Auto.Marca" class="form-label"></label>
            <input asp-for="Auto.Marca" class="form-control" />
            <span asp-validation-for="Auto.Marca" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Auto.Modelo" class="form-label"></label>
            <input asp-for="Auto.Modelo" class="form-control" />
            <span asp-validation-for="Auto.Modelo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Auto.Anio" class="form-label">Año</label>
            <input asp-for="Auto.Anio" class="form-control" type="number" />
            <span asp-validation-for="Auto.Anio" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Auto.Color" class="form-label"></label>
            <input asp-for="Auto.Color" class="form-control" />
            <span asp-validation-for="Auto.Color" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Auto.Placa" class="form-label"></label>
            <input asp-for="Auto.Placa" class="form-control" />
            <span asp-validation-for="Auto.Placa" class="text-danger"></span>
        </div>

        <div class="actions">
            <button type="submit" class="btn-primary">Actualizar Auto</button>
            <a asp-page="Index" class="btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}