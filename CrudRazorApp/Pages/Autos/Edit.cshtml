@page "{id:int}"
@model CrudRazorApp.Pages.Autos.EditModel

@{
    ViewData["Title"] = "Editar Auto";
}

<h1 class="page-title">Editar Auto</h1>
<p class="page-subtitle">Actualiza los detalles del vehículo.</p>

<div class="card" style="max-width: 800px;">
    <form method="post">
        <input type="hidden" asp-for="Auto.Id" />
        
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-layout">
            
            <div class="form-group">
                <label asp-for="Auto.Marca"></label>
                <input asp-for="Auto.Marca" class="form-control" />
                <span asp-validation-for="Auto.Marca" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Auto.Modelo"></label>
                <input asp-for="Auto.Modelo" class="form-control" />
                <span asp-validation-for="Auto.Modelo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Auto.Anio">Año</label>
                <input asp-for="Auto.Anio" class="form-control" type="number" />
                <span asp-validation-for="Auto.Anio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Auto.Color"></label>
                <input asp-for="Auto.Color" class="form-control" />
                <span asp-validation-for="Auto.Color" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Auto.Placa"></label>
                <input asp-for="Auto.Placa" class="form-control" />
                <span asp-validation-for="Auto.Placa" class="text-danger"></span>
            </div>
            
        </div>

        <div class="actions" style="margin-top: 2rem;">
            <button type="submit" class="btn-primary">Guardar Cambios</button>
            <a class="btn-secondary" asp-page="./Index">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}